.chat-main__messages__contents-data
  .chat-main__messages__contents-data__update-date
    .chat-main__messages__contents-data__update-date__name
      = message.user.name
    .chat-main__messages__contents-data__update-date__date
      = message.created_at.strftime("%Y/%m/%d %H:%M")
  .chat-main__messages__contents-data__messages-text 
    - if message.content.present?
      %p.message-text
        = message.content
    = image_tag message.image.url, class: 'lower-message__image' if message.image.present?
    